class Solution {
  public long solution(int a, int b) {
      long answer = 0;

      if(a == b){
          answer = a;
      }
      else if(a > b){
          int i = b;
          while(i <= a){
              answer+=i;
              i++;
          }
      }
      else if(a < b){
          int i = a;
          while(i <= b){
              answer+=i;
              i++;
          }
      }
      return answer;
  }
}
